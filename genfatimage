    0x10c1,0x10c2,0x10c3,0x10c4,0x10c5,0xffff,0xd21b,0xff21,
    0xff22,0xff23,0xff24,0xff25,0xff26,0xff27,0xff28,0xff29,
    0xff2a,0xff2b,0xff2c,0xff2d,0xff2e,0xff2f,0xff30,0xff31,
